<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.narasim.jm_solution_client.ViewProduct">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID :"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Username :" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Product :" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Token :"
        android:layout_marginTop="90dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="Mobile :" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:text="Model :" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="Quantity :" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="Delivery Date :" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:text="Contact Name :" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:visibility="gone"
        android:text="Status Update :" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:visibility="gone"
        android:text="Token Name :" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:text="Feedback :" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:text="Your Thoughts :" />



    <EditText
        android:id="@+id/editTextId"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:background="#fff"
        android:enabled="false"
        android:visibility="gone"
        android:hint="id" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:editable="false"
        android:hint="usename" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextProduct"
        android:layout_marginTop="50dp"
        android:editable="false"
        android:layout_marginLeft="130dp"
        android:hint="service"
        android:background="#fff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextToken"
        android:layout_marginTop="90dp"
        android:editable="false"
        android:layout_marginLeft="130dp"
        android:hint="token"
        android:background="#fff"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="mobile"
        android:editable="false"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextMobile" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="model"
        android:editable="false"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextModel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Quantity"
        android:editable="false"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextQuantity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:editable="false"
        android:hint="Delivery Date"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextDeldate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:editable="false"
        android:hint="Contact Name"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextConname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Status"
        android:editable="false"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/editTextStatus" />

    <!--Spinner-->
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Status"
        android:visibility="gone"
        android:entries="@array/status_arrayedit"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/spinnerStatus" />

    <!--Spinner-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Token Name"
        android:visibility="gone"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextTokenname" />

    <!--Spinner-->
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Feedback"
        android:layout_marginTop="330dp"
        android:entries="@array/feed_array"
        android:layout_marginLeft="130dp"
        android:id="@+id/spinnerFeed" />
<!--Spinner-->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:hint="Your Thougts"
        android:maxLength="150"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="130dp"
        android:id="@+id/editTextHint" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Update Product"
    android:layout_marginTop="430dp"
    android:id="@+id/buttonUpdate" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Delete Employee"
    android:visibility="gone"
    android:id="@+id/buttonDelete" />



</RelativeLayout>
